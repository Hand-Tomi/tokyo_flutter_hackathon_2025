.PHONY: build_runner watch get clean

# Flutter version management
FLUTTER := fvm flutter
DART := fvm dart

# ã‚³ãƒ¼ãƒ‰ç”Ÿæˆ
build_runner:
	@echo "ğŸ”¨ Building mobile app..."
	$(DART) run build_runner build --delete-conflicting-outputs

# ãƒ•ã‚¡ã‚¤ãƒ«å¤‰æ›´ã‚’ç›£è¦–
watch:
	@echo "ğŸ‘€ Watching mobile app..."
	$(DART) run build_runner watch --delete-conflicting-outputs

# ä¾å­˜é–¢ä¿‚ã®å–å¾—
get:
	@echo "ğŸ“¦ Getting dependencies for mobile app..."
	$(FLUTTER) pub get

# ãƒ“ãƒ«ãƒ‰ã‚­ãƒ£ãƒƒã‚·ãƒ¥ã®ã‚¯ãƒªãƒ¼ãƒ³
clean:
	@echo "ğŸ§¹ Cleaning mobile app build cache..."
	$(DART) run build_runner clean
